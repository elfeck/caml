\mode<presentation>

% color definitions
\definecolor{uipaleblue}{RGB}{96,123,139}

% footer styling
\setbeamercolor{section in footer}{fg=white,bg=uipaleblue}
\setbeamercolor{subsection in footer}{fg=white,bg=uipaleblue}
\setbeamercolor{pagenumber in footer}{fg=white,bg=uipaleblue}

\defbeamertemplate*{footline}{sebslidestheme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left,leftskip=15px]
    {section in footer}%
    \inserttitle
  \end{beamercolorbox}%
%  \begin{beamercolorbox}[wd=.34\paperwidth,ht=2.25ex,dp=1ex,center]
%    {subsection in footer}%
%    \insertsectionhead
%  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right,rightskip=10px]
    {pagenumber in footer}%
   \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
  \end{beamercolorbox}}%
  \vskip0pt%
}

\setbeamerfont{title}{size=\Large,series=\bfseries}
\setbeamerfont{subtitle}{size=\small}
\setbeamerfont{author}{size=\small,series=\mdseries}
\setbeamerfont{date}{size=\small,series=\mdseries}
%\setbeamercolor{author}{black}
%\setbeamercolor{date}{black}

\defbeamertemplate*{title page}{sebslidestheme}[1][]
{
  \centering
  \usebeamerfont{title}\usebeamercolor[fg]{title}\inserttitle\par
  \vspace{6px}
  \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par
  \vspace{30px}
  \usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor\par
  \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par
}

\mode<all>